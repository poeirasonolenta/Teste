<body>
  <div class="container" id="loginBox">
    <div class="display" id="display">----</div>
    <div class="buttons">
      <button>1</button><button>2</button><button>3</button>
      <button>4</button><button>5</button><button>6</button>
      <button>7</button><button>8</button><button>9</button>
      <button>0</button><button id="clear">C</button><button id="enter">OK</button>
    </div>
    <div class="msg" id="msg"></div>
  </div>

  <div class="loading" id="loading">CARREGANDO...</div>
  <div class="tabs-container" id="tabs">
    <div class="tab">Aba 1</div>
    <div class="tab">Aba 2</div>
    <div class="tab">Aba 3</div>
    <div class="tab">Aba 4</div>
  </div>

  <script>
    const PASSWORD = '8464';
    let input = '';
    let passwordIndex = 0;

    const display = document.getElementById('display');
    const msg = document.getElementById('msg');
    const loginBox = document.getElementById('loginBox');
    const loading = document.getElementById('loading');
    const tabs = document.getElementById('tabs');
    const buttons = document.querySelectorAll('.buttons button');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const val = btn.textContent;
        if(val==='C'){ 
          input=''; display.textContent='----'; msg.textContent=''; passwordIndex=0; 
        } else if(val==='OK') {
          if(input===PASSWORD){
            msg.textContent='Acesso liberado';
            setTimeout(()=>{
              loginBox.style.display='none';
              loading.classList.add('active');
              setTimeout(()=>{
                loading.classList.remove('active');
                tabs.style.display='block';
              },2000);
            },500);
          } else {
            msg.textContent='Senha incorreta';
          }
        } else {
          if(input.length<4){
            input+=val;
            display.textContent = input.padEnd(4,'-');
            if(val === PASSWORD[passwordIndex]){
              passwordIndex++;
              // efeito simples: botão acende levemente
              btn.style.background='#ff4444';
              setTimeout(()=>{ btn.style.background='black'; },150);
            } else passwordIndex=0;
          }
        }
      });
    });
  </script>
